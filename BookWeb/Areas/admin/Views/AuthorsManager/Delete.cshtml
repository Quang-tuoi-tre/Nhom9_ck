@model BookWeb.Models.Author

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center">Xóa Tác Giả</h1>

<hr />
<h3 class="text-center">Bạn có muốn xóa tác giả này không?</h3>

<div class="row justify-content-center">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
                <p>Hình ảnh</p>
            </dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Author Image" style="max-width:200px;" />
                }
            </dd>
            <dt class="col-sm-4">
                <p>Tên tác giả</p>
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-4">
                <p>Tiểu sử</p>
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>

        <form asp-action="Delete" method="post" class="form-group d-flex justify-content-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Xóa" class="btn btn-danger mx-3" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </form>
    </div>
</div>
