
@{
    @model BookWeb.Models.Order
    ViewData["Title"] = "Đặt hàng thành công!";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="text-center text-success mb-4" style="color:black !important; font-weight:bold; font-size: 2em;"><strong>Cảm ơn bạn đã đặt hàng</strong></h1>
            <p class="text-center text-muted">Đơn hàng của bạn đã được xác nhận và đang chờ xử lý.</p>

            <hr />
            <div class="row mt-4">
                <!-- Thông tin giao hàng -->
                <div class="col-md-6">
                    <h4 class="text-primary">Thông tin giao hàng</h4>
                    <ul class="list-unstyled">
                        <li><strong>Họ tên người nhận:</strong> @Model.Name</li>
                        <li><strong>Số điện thoại:</strong> @Model.PhoneNumber</li>
                        <li><strong>Địa chỉ:</strong> @Model.ShippingAddress</li>
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <li><strong>Ghi chú:</strong> @Model.Notes</li>
                        }
                    </ul>
                </div>

                <!-- Thông tin đơn hàng -->
                <div class="col-md-6">
                    <h4 class="text-primary">Thông tin đơn hàng</h4>
                    <ul class="list-unstyled">
                        <li><strong>Mã đơn hàng:</strong> @Model.Id</li>
                        <li><strong>Ngày đặt hàng:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</li>
                        <li><strong>Phương thức thanh toán:</strong>@Model.PaymentMethod</li>
                        <li><strong>Tổng tiền:</strong> @string.Format("{0:N0} VND", @Model.TotalPrice)</li>
                    </ul>
                </div>
            </div>

            <!-- Các nút hành động -->
            <div class="mt-5 text-center">
                <a class="btn btn-outline-primary btn-lg" asp-action="OrderDetails" asp-controller="ShoppingCart" asp-route-id="@Model.Id">Chi tiết đơn hàng</a>
                <a class="btn btn-primary btn-lg" asp-action="Index" asp-controller="Home">Tiếp tục mua sắm</a>
            </div>
        </div>
    </div>
</div>
